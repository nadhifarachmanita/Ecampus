<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nadifa.ecampus.MainActivitymenu">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="573dp"
        android:layout_margin="2pt"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="-12dp">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="529dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="520dp"
                    android:orientation="vertical"
                    android:weightSum="2">


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        app:srcCompat="@drawable/topi1" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.23"
                        android:fontFamily="monospace"
                        android:text="Info Ecampus NOW!"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12pt"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2pt"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="165dp"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textView8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginLeft="19dp"
                                        android:layout_marginStart="19dp"
                                        android:text="UNIVERSITAS"
                                        android:textColor="@color/lingkaran_universitas"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />


                                    <Button
                                        android:id="@+id/btnuniversitas"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="80dp"
                                        android:layout_height="75dp"
                                        android:layout_alignEnd="@+id/textView8"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignRight="@+id/textView8"
                                        android:background="@drawable/lingkaran_universitas"
                                        android:drawableTop="@drawable/ic_school_black_24dp"
                                        android:indeterminate="false"
                                        android:onClick="btn_univ"
                                        android:padding="13dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/btnsekolahtinggi"
                                        android:text="SEKOLAH TINGGI"
                                        android:textColor="@color/lingkaran_sekolahtinggi"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />


                                    <Button
                                        android:id="@+id/btnsekolahtinggi"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="80dp"
                                        android:layout_height="75dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:background="@drawable/lingkaran_sekolahtinggi"
                                        android:drawableTop="@drawable/ic_sekolahtinggi"
                                        android:indeterminate="false"
                                        android:onClick="btn_st"
                                        android:padding="16dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12pt"
                        android:orientation="horizontal"
                        android:paddingBottom="9dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/btninstitut"
                                        android:layout_centerHorizontal="true"
                                        android:text="INSTITUT"
                                        android:textColor="@color/lingkaran_institut"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <Button
                                        android:id="@+id/btninstitut"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/lingkaran_institut"
                                        android:drawableTop="@drawable/ic_institut"
                                        android:indeterminate="false"
                                        android:onClick="btn_inst"
                                        android:padding="17dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/btnakademi"
                                        android:layout_centerHorizontal="true"
                                        android:text="AKADEMI"
                                        android:textColor="@color/lingkaran_akademi"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />


                                    <Button
                                        android:id="@+id/btnakademi"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="80dp"
                                        android:layout_height="75dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/lingkaran_akademi"
                                        android:drawableTop="@drawable/ic_institut"
                                        android:indeterminate="false"
                                        android:onClick="btn_akd"
                                        android:padding="17dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12pt"
                        android:orientation="horizontal"
                        android:paddingBottom="9dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/btnshare"
                                        android:layout_centerHorizontal="true"
                                        android:text="SHARE"
                                        android:textColor="@color/lingkaran_share"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />


                                    <Button
                                        android:id="@+id/btnshare"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="80dp"
                                        android:layout_height="75dp"
                                        android:layout_centerHorizontal="true"
                                        android:background="@drawable/lingkaran_share"
                                        android:drawableTop="@drawable/ic_share"
                                        android:indeterminate="false"
                                        android:onClick="btn_share"
                                        android:padding="12dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:layout_weight="1"

                                android:gravity="center_horizontal"
                                android:orientation="vertical">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/btnabout"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:text="ABOUT"
                                        android:textColor="@color/lingkaran_about"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />


                                    <Button
                                        android:id="@+id/btnabout"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="80dp"
                                        android:layout_height="75dp"
                                        android:layout_centerHorizontal="true"
                                        android:background="@drawable/lingkaran_about"
                                        android:drawableTop="@drawable/ic_about"
                                        android:gravity="center"

                                        android:indeterminate="false"

                                        android:onClick="btn_cont"
                                        android:padding="17dp"
                                        android:textStyle="bold" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>


</LinearLayout>
